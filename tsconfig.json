{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "removeComments": true,
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}